<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B3CCF"
    android:orientation="vertical"
    tools:context=".Login_Activity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"

        />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1D421885"
        android:drawableEnd="@drawable/baseline_person"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColorHint="@color/white"

        />

    <Button
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:backgroundTint="#1D421885"
        android:drawableEnd="@drawable/baseline_key"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="viewStart"
        android:textColorHint="@color/white" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:text="Remember Password"
        android:textColor="@color/white"
        android:textSize="12sp" />


    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:backgroundTint="#E4673F"
        android:text="Sign In"
        android:textAlignment="center"
        android:textColorHint="@color/white" />


    <Button
        android:layout_width="191dp"
        android:layout_height="160dp"
        android:backgroundTint="#00E4673F"
        android:text="Forget Password?"
        android:textColorHint="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="60dp"
        android:text="Sign in with Social Media"
        android:textColor="#CDC7C7"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="206dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:paddingTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/face" />


</LinearLayout>